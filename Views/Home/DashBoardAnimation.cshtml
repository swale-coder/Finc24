
<div class="modal-body">

    @using (Html.BeginForm("Animation", "Home", FormMethod.Post))
    {
        <div id="sliderFrame">
            <div id="slider">
                @foreach (var obj in ViewBag.Images)
                {
                    <a class="lazyImage" href=@obj></a>
                }
                @*<a class="lazyImage" href="~/images/image-slider-@(i).jpg" title="Pure Javascript. No jQuery. No flash."></a>*@

            </div>
            <!--thumbnails-->
            <div id="thumbs">
                @foreach (var objThumb in ViewBag.Images)
                {
                    <div class="thumb">
                        <img src=@objThumb />

                    </div>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @*<button type="submit" class="btn btn-default" id="close"
                        data-dismiss="modal">
                    Cancel
                </button>*@
                <button type="submit" id="approve-btn"
                        class="btn btn-danger">
                    Close
                </button>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#close').click(function () {
            $('#modal-container').modal('hide');
            history.go(0);
        });
        //$('#approve-btn').click(function () {
        //    $('#modal-container').modal('hide');
        //});
    });
</script>