    <script type="text/javascript">
        $(document).ready(function () {
            $(".lblError").hide();
            $('.login-btn').click(function () {

                if ($.trim($('#mdlemailId').val()) == '') {
                    $(".lblError").hide();
                    $('#lblmdlEmail').show();
                    $("#mdlemailId").focus();
                    return false;
                }
                if ($.trim($('#mdlemailId').val()) != '') {
                    if (!ValidateEmail($("#mdlemailId").val())) {
                        $(".lblError").hide();
                        $('#lblmdlInvalidEmail').show();
                        $("#mdlemailId").focus();
                        return false;
                    }

                }
                if (($.trim($('#mdlPassword').val())) == '') {
                    $('.lblError').hide();
                    $('#lblmdlPassword').show();
                    $('#mdlPassword').focus();
                    return false;
                }
            });
            function ValidateEmail(email) {
                var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
                return expr.test(email);
            };
            $('.current').click(function () {
                $('html, body').animate({
                    scrollTop: 0
                }, 100)
            });
            $('.login-btn').css('cursor', 'hand');

        });
